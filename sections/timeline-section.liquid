{% style %}
   #Timeline-section-{{ section.id }} {
     --topSpacingRatio: {{section.settings.top_spacing}} / 100;
     --bottomSpacingRatio: {{section.settings.bottom_spacing}} / 100;
     --iconHeight: {{section.settings.icon_height}}px;
   }

  @media screen and (max-width: 676px) {
     {% if section.settings.icon_height > 400 %}
        #Timeline-section-{{ section.id }} {
           --iconHeight: {{ section.settings.icon_height | times: 0.6}}px;
        }
     {% endif %}
  }
{% endstyle %}

{{ 'timeline-section.css' | asset_url | stylesheet_tag }}

<div
  id="Timeline-section-{{ section.id }}"
  class="timeline-section __theme-{{ section.settings.theme }}"
>
  {% comment %} Text Content {% endcomment %}
  {% render 'heading',
    class: 'timeline-section',
    heading: section.settings.heading,
    heading_size: section.settings.heading_size,
    alt_heading: section.settings.alt_heading
  %}

  {% comment %} Icons {% endcomment %}
  <div
    class="timeline-section__icons"
    style="--numColumns: {{ section.settings.cols_desktop }}; --mobileNumColumns: {{ section.settings.cols_mobile }};"
  >
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'part' -%}
          <div class="timeline-section__icons__icon __align-{{section.settings.alignment}}">
            {%- if block.settings.icon != blank -%}
              {% render 'next-gen-img', image: block.settings.icon %}
            {%- else -%}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}

            {% if block.settings.heading != '' or block.settings.year != '' %}
              <h3 class="h6">
                {% if block.settings.year != '' %}
                  <span class="h4 timeline-section__icons__icon__year">{{ block.settings.year }}</span>
                {% endif %}

                {{ block.settings.heading }}
              </h3>
            {% endif %}

            {% if block.settings.text != '' %}
              <p>{{ block.settings.text }}</p>
            {% endif %}
          </div>
      {%- endcase -%}
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Icons Section",
  "tag": "section",
  "class": "commence-section",
  "settings": [
    {
      "type": "header",
      "content": "Text Content"
    },
    {
      "type": "text",
      "id": "heading",
      "default": "Lorem ipsum",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "X-Large"
        },
        {
          "value": "h4",
          "label": "Large"
        },
        {
          "value": "h5",
          "label": "Medium"
        },
        {
          "value": "h6",
          "label": "Small"
        }
      ],
      "default": "h5",
      "label": "Heading Size"
    },
    {
      "type": "header",
      "content": "General"
    },
    {
      "type": "range",
      "id": "cols_desktop",
      "min": 1.0,
      "max": 6.0,
      "step": 0.5,
      "label": "Parts Shown On Desktop",
      "default": 5.5
    },
    {
      "type": "range",
      "id": "cols_mobile",
      "min": 1.0,
      "max": 6.0,
      "step": 0.5,
      "label": "Parts Shown On Mobile",
      "default": 1.5
    },
    {
      "type": "range",
      "id": "icon_height",
      "min": 30,
      "max": 500,
      "step": 10,
      "unit": "px",
      "label": "Icon Height",
      "default": 100
    },
    {
      "type": "radio",
      "id": "alignment",
      "label": "Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Section"
    },
    {
      "type": "select",
      "id": "theme",
      "options": [
        {
          "value": "primary",
          "label": "Primary Theme"
        },
        {
          "value": "2",
          "label": "2nd Theme"
        },
        {
          "value": "3",
          "label": "3rd Theme"
        },
        {
          "value": "4",
          "label": "4th Theme"
        },
        {
          "value": "5",
          "label": "5th Theme"
        }
      ],
      "default": "primary",
      "label": "Theme"
    },
    {
      "type": "range",
      "id": "top_spacing",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Top Spacing",
      "default": 50
    },
    {
      "type": "range",
      "id": "bottom_spacing",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Bottom Spacing",
      "default": 50
    }
  ],
  "blocks": [
    {
      "type": "part",
      "name": "Part",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "year",
          "label": "Year"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Label"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Description",
          "default": "Nostrud exercitation"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Part Section",
      "blocks": [
        {
          "type": "part"
        },
        {
          "type": "part"
        },
        {
          "type": "part"
        }
      ]
    }
  ]
}
{% endschema %}
