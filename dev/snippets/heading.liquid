{% comment %}
  Renders a heading

  Accepts:
  - heading_size: {String} "h2", "h4", "h5", "h6"
  - heading: {String}
  - class: {String}
  - heading_tag: {string} Optional "h1", "h2" (default), "h3" 
  - button_label: {string} optional
  - button_link: {url} optional

  Usage:
  {% render 'heading', class: "split-section__text", heading: block.settings.heading, heading_size: block.settings.heading_size %}
{% endcomment %}

{% assign heading_tag = heading_tag | default: "h2" %}

{% if heading != blank %}
    <{{ heading_tag }}
      class="{% if class %}{{ class }}__heading{% endif %} {{ heading_size }} {% if alt_heading %}alt{% endif%}"
      {{ block.shopify_attributes }}
    >
      {{ heading | escape }}
      {%  if button_link and button_label %}
        <a href="{{ button_link }}" class="b4">{{  button_label }}</a>
      {%  endif %}
    </{{ heading_tag }}>
{% endif %}
