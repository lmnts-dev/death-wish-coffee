{%- assign section = section.settings -%}
{%- assign desktop_image = section.image | img_url: 'master' -%}
{%- assign mobile_image = section.image_mobile | img_url: 'master' -%}

{%- render 'hero',
  video: section.video,
  desktop_image: desktop_image,
  mobile_image: mobile_image,
  title: section.title,
  description: section.description
-%}

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Image Mobile"
    },
    {
      "type": "text",
      "id": "video",
      "label": "Video"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    }
  ]
}
{% endschema %}
