<section class="form-login spacing--lg" data-module="form-log-in">
  <div class="form-login__container container">
    <h1 class="form-login__header h1">LOGIN</h1>
    {%- render 'form-forgot' -%}
    <div class="form-login__success-msg"></div>
    {% form 'customer_login', class: 'form-login__form visible' %}
      {{ form.errors | default_errors }}
      {%- render 'input-email', name: 'customer[email]', id: 'user_email', placeholder: 'Email', class: 'form-login__email' -%}
      {%- render 'input-password', name: 'customer[password]', id: 'user_password', placeholder: 'Password', class: 'form-login__password' -%}
      <div class="form-login-footer">
        {%- comment -%}
          "remember me" doesn't appear to be a thing in shopify, so leaving this out for now...
                      {%- render 'input-checkbox', label: 'Keep me logged in', name: 'remember_me' -%}
        {%- endcomment -%}
        {% render 'button', tag: 'button', custom_attrs: 'type="submit"', button_value: 'Login', class: 'form-login__button button--light' %}
      </div>
      <div class="form-login-footer-links">
        <a class="form-login-footer__account b1" href="/account/register">Create Account</a>
        <button class="form-login-footer__account form-login-footer__account--password button-reset b1" type="button">Forgot Password?</button>
      </div>
    {% endform %}
  </div>
</section>
