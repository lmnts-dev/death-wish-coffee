{% assign class = class | default: false %}
{% assign title = title | default: false %}
{% assign price = price | default: false %}
{% capture class %}product-card{% if class %} {{- class -}}{% endif %}{% endcapture %}
{% if button_class_custom %}
  {%- assign button_class = button_class | append: ' ' | append: button_class_custom -%}
{% endif %}

<section class="product-card{% if class %} {{ class }}{% endif %}" data-module="product-card">
  <div class="product-card__inner">
    <div class="product-card__header">
      <div class="product-card__image-container">
        <a href="#" class="product-card__image-link">
          {%- render 'image', src: image_src -%}
        </a>
      </div>
      <div class="product-card__overlay js-overlay">
        <div class="product-card__quick-shop">
          {%- render 'button', button_url: button_url, button_value: 'Quick Shop', tag: 'button', custom_attrs: 'type="submit"' class: 'product-card__quick-shop-btn button--light js-button' -%}
        </div>
        <form method="post" action="/cart/add" class="product-card__form">
          <button class="product-card__close js-close" type="button">
            {%- render 'svg', type: 'close', class: 'product-card__close-icon' -%}
          </button>
          <div class="product-card__variant-choices-wrapper">
            <div class="product-card__variant-choices product-card__variant-choices--weight">
              <div class="product-card__variant-choices-inner">
                <div class="product-card__choice">
                  <input id="variant-1-size-1" type="radio" name="variant[Weight]" class="radio product-card__choice-input" value="1lb">
                  <label for="variant-1-size-1" class="label label--radio product-card__choice-label">
                    {% render 'svg', type: 'logo', class: 'product-card__choice-icon' %}
                    1LB
                  </label>
                </div>
                <div class="product-card__choice">
                  <input id="variant-1-size-2" type="radio" name="variant[Weight]" class="radio product-card__choice-input" value="2lb">
                  <label for="variant-1-size-2" class="label label--radio product-card__choice-label">
                    {% render 'svg', type: 'logo', class: 'product-card__choice-icon' %}
                    2LB
                  </label>
                </div>
                <div class="product-card__choice">
                  <input id="variant-1-size-3" type="radio" name="variant[Weight]" class="radio product-card__choice-input" value="5lb">
                  <label for="variant-1-size-3" class="label label--radio product-card__choice-label">
                    {% render 'svg', type: 'logo', class: 'product-card__choice-icon' %}
                    5LB
                  </label>
                </div>
              </div>
            </div>
            <div class="product-card__variant-choices product-card__variant-choices--material">
              <div class="product-card__variant-choices-inner">
                <div class="product-card__choice">
                  <input id="variant-2-size-1" type="radio" name="variant[Material]" class="radio product-card__choice-input" value="1lb">
                  <label for="variant-2-size-1" class="label label--radio product-card__choice-label">
                    {% render 'svg', type: 'logo', class: 'product-card__choice-icon' %}
                    Ground
                  </label>
                </div>
                <div class="product-card__choice">
                  <input id="variant-2-size-2" type="radio" name="variant[Material]" class="radio product-card__choice-input" value="1lb">
                  <label for="variant-2-size-2" class="label label--radio product-card__choice-label">
                    {% render 'svg', type: 'logo', class: 'product-card__choice-icon' %}
                    Whole Bean
                  </label>
                </div>
              </div>
            </div>
          </div>
          {%- render 'button', button_url: button_url, button_value: 'Add To Cart', tag: 'button', custom_attrs: 'type="submit"' class: button_class -%}
        </form>
      </div>
    </div>
    <div class="product-card__content">
      <h4 class="b1 product-card__title">{{ title }}</h4>
      <div class="b1 product-card__review">Review</div>
      <p class="h5 product-card__price">{{ price }}</p>
    </div>
  </div>
</section>
