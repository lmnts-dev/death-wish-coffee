{%- assign title = title | default: false -%}
{%-assign description = description | default: false -%}
{% assign class = class | default:false %}
{% capture class %}title-description-card{% if class %} {{- class -}}{% endif %}{% endcapture %}

{%- if title and description -%}
  <section class="{{ class }} bg--black" data-module="title-description-card">
    <div class="title-description-card__inner">
      {%- if title != blank -%}
        <div class="title-description-card__content">
          <div class="h4 title-description-card__title">
            {{ title }}
          </div>
          {%- if description != blank -%}
            <div class="p1 title-description-card__description">
              {{ description }}
            </div>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>
  </section>
{%- endif -%}
