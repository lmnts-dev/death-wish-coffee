{%- comment -%}
    Extract just the necessary data from product for Vue components, including:
    - Product Cards
    - Product Forms
    - PLP Filter
{%- endcomment -%}
{
  "title": {{ product.title | json }},
  "id": {{ product.id | json }},
  "handle": {{ product.handle | json }},
  "url": {{ product.url | json }},
  "options": {{ product.options | json }},
  "options_by_name": {{ product.options_by_name | json }},
  "variants": {{ product.variants | json }},
  "sf_upscribe": {{ product.metafields.sf_upscribe | json }},
  "price": {{ product.price | json }},
  "featured_image": {{ product.featured_image | img_url: 'master' | json }},
  "tags": {{ product.tags | json }},
  "published_at": {{ product.published_at | json }},
  "video": {{ product.metafields.accentuate.video_loop_url | json }},
  "type": {{ product.type | json }},
  "selected_or_first_available_variant": {{ product.selected_or_first_available_variant | json }}
  {%- if include_media == true -%}
  ,"media": {{ product.media | json }}
  {%- endif -%}
  {%- if include_extra_contents == true -%}
  ,"extra_description_1": {{ product.metafields.accentuate.extra_description_1 | json }}
  ,"extra_description_2": {{ product.metafields.accentuate.extra_description_2 | json }}
  {%- endif -%}
  {%- if include_description == true -%}
  ,"description": {{ product.description | json }}
  {%- endif -%}
}
