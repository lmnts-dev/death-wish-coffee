{%- layout 'theme' -%}
{%- assign product_metafields = product.metafields -%}
{%- assign product_acf = product_metafields.accentuate -%}
{%- assign palette = product_acf.palette_selection | handle -%}

{%- comment -%}PDP Hero{%- endcomment -%}
{%- render 'pdp-hero' -%}

{%- comment -%}Media Hero Grid{%- endcomment -%}
{%- assign media_hero_grid_title = product_acf.media_hero_grid_heading -%}
{%- assign media_hero_grid_metafields = product_metafields.media-grid -%}
{%- assign types = media_hero_grid_metafields.type -%}
{%- assign images = media_hero_grid_metafields.image -%}
{%- assign videos = media_hero_grid_metafields.video -%}
{%- capture media_hero_title_class -%}{% if palette != blank %}section-title--palette-{{ palette }}{% endif %}{%- endcapture -%}
{%- render 'media-hero-grid',
  class: 'bg--black',
  title: media_hero_grid_title,
  title_class: media_hero_title_class,
  types: types,
  images: images,
  videos: videos
-%}

{%- comment -%}Review Drawer{%- endcomment -%}
{%- capture review_class -%}{% if palette != blank %}review-drawer--palette-{{ palette }}{% endif %}{%- endcapture -%}
{%- render 'review-drawer', class: review_class, title: product_acf.pdp_review_heading -%}

{%- comment -%}Featured Product Carousel{%- endcomment -%}
{%- assign list_products = product_acf.pdp_featured_products_selector -%}
{%- assign section_title_hero = product_acf.pdp_featured_products_heading -%}

{%- if product_acf.pdp_featured_products_selector == blank -%}
  {%- assign count = 1 -%}
  {%- paginate collections.all.products by 9999 -%}
    {% for item in collections.all.products %}
      {%- if item.type == product.type and item.id != product.id -%}
        {%- if count <= 8 -%}
          {%- assign list_products = list_products | append: item.handle | append: '|' -%}
        {%- endif -%}
        {%- assign count = count | plus: 1 -%}
      {%- endif -%}
    {% endfor %}
  {%- endpaginate -%}
{%- endif -%}

{%- if list_products != blank -%}
  {%- assign count_carousel = 0 -%}
  {%- capture content_slides -%}
    {%- assign list_products = list_products | split: '|' -%}
    {% for handle in list_products %}
      {%- assign count_carousel = count_carousel | plus: 1 -%}
      {%- assign product = all_products[handle] -%}
      {% assign title = product.title %}
      {% assign image_url = product.images[1] | img_url: 'master' %}
      {% assign url = product.url %}
      {%- capture price %}
        {{ product.price | money }}{% if customer %} (FREE SHIPPING){% endif %}
      {%- endcapture -%}
      {%- assign description = product.description | strip_html | truncate: 500, '' -%}
      {%- assign cta_text = 'Take me There' -%}
      {%- capture card_class -%}
        swiper-slide product-hero-card--no-opacity product-hero-card--hover product-hero-card--no-padding{% if palette != blank %} product-hero-card--palette-{{ palette }}{% endif %} js-product-hero-card
      {%- endcapture -%}
      {%- capture cta_class -%}
        button--palette-{{ palette }}
      {%- endcapture -%}
      {%- if title != blank -%}
        {%- render 'product-hero-card'
          class: card_class,
          title: title,
          image_url: image_url,
          url: url,
          price: price,
          description: description,
          sub_description: sub_description,
          cta_text: cta_text,
          cta_class: cta_class,
          product_id: product.id
        -%}
      {%- endif -%}
    {% endfor %}
  {%- endcapture -%}

  {%- assign navigation_carousel = true -%}
  {%- assign slides_per_view_carousel = 1 -%}
  {%- assign carousel_loop = true -%}

  {%- if count_carousel == 1 -%}
    {%- assign navigation_carousel = false -%}
    {%- assign carousel_loop = false -%}
  {%- endif -%}

  {%- capture carousel_class -%}
    carousel--product-hero-card carousel--no-padding bg--shadow{% if palette != blank %} carousel--palette-{{ palette }}{% endif %}
  {%- endcapture -%}
  {%- capture carousel_title_class -%}
    section-title--product-hero-card{% if palette != blank %} section-title--palette-{{ palette }}{% endif %}
  {%- endcapture -%}

  {%- render 'carousel',
    title: section_title_hero,
    title_class: carousel_title_class,
    class: carousel_class,
    children: content_slides,
    spacing: 0,
    slides_per_view: slides_per_view_carousel,
    loop: carousel_loop,
    navigation: navigation_carousel
  -%}
{%- endif -%}

{%- comment -%}Footer CTA{%- endcomment -%}
{%- assign is_input_with_border = false -%}
{%- if palette == 'white' -%}
  {%- assign is_input_with_border = true -%}
{%- endif -%}
{%- capture footer_cta_class -%}{% if palette != blank %}footer-cta--palette-{{ palette }}{% endif %}{%- endcapture -%}
{%- render 'footer-cta', is_input_with_border: is_input_with_border, class: footer_cta_class, title: product_acf.pdp_footer_cta_heading, enable_subscribe_form: true %}
