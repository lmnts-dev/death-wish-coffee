{%- layout 'theme' -%}
{% assign acf = collection.metafields.accentuate %}
{% assign list_products = acf.collection_hero_carou_product | default: blank %}
{% assign list_products_images = acf.collection_carou_feat_media | map: 'src' | default: blank %}

{%- render 'breadcrumbs' -%}

{%- if acf.collection_hero_carou_product == blank -%}
  {%- assign count = 1 -%}
  {% for item in collection.products %}
    {%- if item.type == collection.title -%}
      {%- if count <= 8 -%}
        {%- assign list_products = list_products | append: item.handle | append: '|' -%}
      {%- endif -%}
      {%- assign count = count | plus: 1 -%}
    {%- elsif collection.handle == 'all' -%}
      {%- if count <= 8 -%}
          {%- assign list_products = list_products | append: item.handle | append: '|' -%}
        {%- endif -%}
      {%- assign count = count | plus: 1 -%}
    {%- endif -%}
  {% endfor %}
{%- endif -%}

{%- if list_products != blank -%}
  {%- assign count_carousel = 0 -%}
  {%- capture content_slides -%}
    {%- assign list_products = list_products | split: '|' -%}
    {% for handle in list_products %}
      {%- assign count_carousel = count_carousel | plus: 1 -%}
      {%- assign product = all_products[handle] -%}
      {% assign title = product.title %}
      {% assign url = product.url %}
      {% assign reviews = 'Review' %}
      {% if list_products_images != blank %}
        {% assign image_url = list_products_images[forloop.index0]%}
      {% else %}
        {% assign image_url = product.images[0] | img_url: 'master' %}
      {% endif %}
      {%- capture price %}
        {{ product.price | money }}{% if customer %} (FREE SHIPPING){% endif %}
      {%- endcapture -%}
      {%- assign description = product.description | strip_html | truncate: 500, '' -%}
      {%- assign cta_text = 'Take me There' -%}
      {%- if title != blank -%}
        {%- render 'product-hero-card'
          class: 'swiper-slide product-hero-card--no-opacity product-hero-card--hover product-hero-card--no-padding js-product-hero-card',
          title: title,
          image_url: image_url,
          url: url,
          price: price,
          description: description,
          sub_description: sub_description,
          cta_text: cta_text,
          product_id: product.id
        -%}
      {%- endif -%}
    {% endfor %}
  {%- endcapture -%}

  {%- assign navigation_carousel = true -%}
  {%- assign slides_per_view_carousel = 1 -%}

  {%- if count_carousel == 1 -%}
    {%- assign navigation_carousel = false -%}
    {%- assign slides_per_view_carousel = 0 -%}
  {%- endif -%}

  {%- render 'carousel',
    class: 'carousel--plp carousel--no-padding bg--black',
    children: content_slides,
    spacing: 0,
    slides_per_view: slides_per_view_carousel,
    navigation: navigation_carousel 
  -%}
{%- endif -%}

{%- capture acf_filters -%}
  {%- if acf.apparel_type_selector != blank -%}
    Title:Apparel Type|{{- acf.apparel_type_selector -}}
  {%- endif -%}
{%- endcapture -%}
{%- render 'plp',
  class: 'bg--black',
  acf_filters: acf_filters,
  plp_order_selector: acf.plp_order_selector,
  plp_featured_item_selector: acf.plp_featured_item_selector
-%}
{%- if collection.metafields.collections.footer_cta_heading != blank -%}
  {%- render 'footer-cta',
    title: collection.metafields.collections.footer_cta_heading,
    enable_subscribe_form: true 
  -%}
{%- endif -%}

{%- paginate collection.products by 50 -%}
  {%- capture product_json -%}
    {%- for product in collection.products -%}
      ,{% render 'product-json', product: product %}
    {%- endfor -%}
  {%- endcapture -%}
  {% assign product_json = product_json | remove_first: ',' %}
<script>
  window.DWC_PLP = {
    definitions: [
      {
        name: 'Roast',
        type: 'tag',
        options: [
          'Dark',
          'Medium',
          'Light'
        ]
      },
      {
        name: 'Style',
        type: 'option',
        options: [
          'Ground',
          'Whole Bean',
          'Cold Brew',
          'Espresso'
        ]
      },
      {
        name: 'Format',
        type: 'tag',
        options: [
          'Single Serve',
          'Pour Over',
          'Canned',
          'Bagged'
        ]
      },
      {
        name: 'Size',
        type: 'option',
        options: [
          '1 bag',
          '5 bags',
          '12-pack',
          '24-pack',
          '1 Pound',
          '2 Pound',
          '5 Pound'
        ]
      }
    ],
    products: {{ product_json | escape }}
  }
</script>
{%- endpaginate -%}
