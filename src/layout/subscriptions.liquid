<!DOCTYPE html>
<html">

  <head>
    {{content_for_header}}
  </head>

  <body id="{{- page_title | handle -}}"
    class="{%- if customer -%}customer-logged-in {%- endif -%}p template-{{- template | replace: '.', ' ' | handle -}}">
    <main id="page" class="relative z0" role="main">
      {{content_for_layout}}
      <iframe frameborder="0" allowfullscreen id="upscribe-iframe" scrolling="no" onload="resizeIframe(this)"
        style="top: 0; left: 0; width: 100%;" src="/account?view=subscriptions#">
      </iframe>
    </main>
    <script type="text/javascript">
      function resizeIframe(obj) {
        obj.style.height = obj.contentWindow.document.documentElement.scrollHeight + 'px'
      }
    </script>
  </body>

  </html>
